<% if (success && success.length) {%> 
<div class="alert alert-success alert-dismissible fade show w-25 position-absolute start-50 translate-middle text-center flash" role='alert'>
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (error && error.length) {%> 
<div class="alert alert-danger alert-dismissible fade show w-25 position-absolute translate-middle start-50 flash text-center" role='alert'>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <%= error %>
</div>
<% } %> 